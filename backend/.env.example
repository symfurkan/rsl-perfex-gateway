# RSL Perfex Gateway Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@localhost:27017/rsl-perfex-gateway
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=rsl-perfex-gateway
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration (for Perfex credentials)
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Perfex CRM Configuration
PERFEX_BASE_URL=https://your-perfex-instance.com
PERFEX_SESSION_TIMEOUT=3600000
PERFEX_RETRY_ATTEMPTS=3
PERFEX_RETRY_DELAY=1000

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log